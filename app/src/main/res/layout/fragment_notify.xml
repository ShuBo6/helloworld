                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="新增"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/baoxiu_topbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报修信息"
                android:textColor="#000"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/add_order_text"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/notify_tablayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tabSelectedTextColor="#00aeef"
            app:tabTextColor="#000"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:tabIndicatorHeight="4dp"
            app:tabIndicatorColor="#00aeef"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notify_head_bar">

