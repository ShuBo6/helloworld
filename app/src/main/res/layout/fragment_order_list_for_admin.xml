<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.OrderListForAdminFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <include
            android:id="@+id/orderorder_bar"
            layout="@layout/base_head_layout_grey" />

        <android.support.design.widget.TabLayout
            android:id="@+id/ordertab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#ffffff"

            android:fillViewport="false"
            app:tabIndicatorColor="@color/common_orange"
            app:tabIndicatorHeight="4dp"
            app:tabSelectedTextColor="@color/common_orange"
            app:tabTextColor="@color/radio_button_grey" />

        <android.support.v4.view.ViewPager
            android:id="@+id/orderviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/grey_line" />
    </LinearLayout>

</FrameLayout>